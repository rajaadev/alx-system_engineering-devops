#!/usr/bin/env bash
# This script displays numbers from 1 to 20 and different messages based on certain iterations

# Initialize counter
counter=1

# Loop from 1 to 20
while [ $counter -le 20 ]; do
    # Display the current number
    echo $counter

    # Check for specific iterations and display messages accordingly using the case statement
    case $counter in
        4)
            echo "bad luck from China"
            ;;
        9)
            echo "bad luck from Japan"
            ;;
        17)
            echo "bad luck from Italy"
            ;;
    esac

    # Increment counter
    ((counter++))
done
